<?xml version="1.0" encoding="utf-8" ?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:versionCode="110"
    android:versionName="1.1.0"
    package="com.google.android.finsky">
    <supports-screens
        android:largeScreens="true"
        android:normalScreens="false"
        android:smallScreens="false"
        android:xlargeScreens="true"/>
    <uses-permission
        android:name="android.permission.INTERNET"/>
    <uses-permission
        android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission
        android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission
        android:name="android.permission.MANAGE_ACCOUNTS"/>
    <uses-permission
        android:name="android.permission.AUTHENTICATE_ACCOUNTS"/>
    <uses-permission
        android:name="android.permission.USE_CREDENTIALS"/>
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission
        android:name="com.google.android.providers.gsf.permission.READ_GSERVICES"/>
    <uses-permission
        android:name="com.google.android.providers.gsf.permission.WRITE_GSERVICES"/>
    <application
        android:debuggable="false"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher_marketplace"
        android:label="@string/app_name"
        android:name=".FinskyApp"
        android:theme="@style/FinskyTheme">
        <activity
            android:label="@string/app_name"
            android:name=".activities.QsbSearchActivity"
            android:stateNotNeeded="true"
            android:theme="@android:style/Theme.NoDisplay">
            <intent-filter>
                <action
                    android:name="android.intent.action.SEARCH"/>
                <category
                    android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/qsb_searchable"/>
        </activity>
        <activity
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:name=".activities.MainActivity"
            android:screenOrientation="sensorLandscape"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action
                    android:name="android.intent.action.MAIN"/>
                <action
                    android:name="android.intent.action.SEARCH"/>
                <category
                    android:name="android.intent.category.LAUNCHER"/>
                <category
                    android:name="android.intent.category.APP_MARKET"/>
                <category
                    android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
            <meta-data
                android:name="com.android.launcher.toolbar_icon"
                android:resource="@drawable/launcher_toolbar_icon"/>
        </activity>
        <activity
            android:name=".activities.TosActivity"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/Theme.MinimalDialog"
            android:windowSoftInputMode="adjustResize"/>
        <activity
            android:name=".activities.AppsUrlHandlerActivity">
            <intent-filter>
                <action
                    android:name="android.intent.action.VIEW"/>
                <category
                    android:name="android.intent.category.DEFAULT"/>
                <category
                    android:name="android.intent.category.BROWSABLE"/>
                <data
                    android:host="details"
                    android:path=""
                    android:scheme="market"/>
                <data
                    android:host="search"
                    android:path=""
                    android:scheme="market"/>
                <data
                    android:host="market.android.com"
                    android:pathPrefix="/details"
                    android:scheme="http"/>
                <data
                    android:host="market.android.com"
                    android:pathPrefix="/apps"
                    android:scheme="http"/>
                <data
                    android:host="market.android.com"
                    android:pathPrefix="/search"
                    android:scheme="http"/>
                <data
                    android:host="market.android.com"
                    android:pathPrefix="/details"
                    android:scheme="https"/>
                <data
                    android:host="market.android.com"
                    android:pathPrefix="/apps"
                    android:scheme="https"/>
                <data
                    android:host="market.android.com"
                    android:pathPrefix="/search"
                    android:scheme="https"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.BooksUrlHandlerActivity">
            <intent-filter>
                <action
                    android:name="android.intent.action.VIEW"/>
                <category
                    android:name="android.intent.category.DEFAULT"/>
                <category
                    android:name="android.intent.category.BROWSABLE"/>
                <data
                    android:host="market.android.com"
                    android:pathPrefix="/books"
                    android:scheme="http"/>
                <data
                    android:host="market.android.com"
                    android:pathPrefix="/books"
                    android:scheme="https"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MusicUrlHandlerActivity">
            <intent-filter>
                <action
                    android:name="android.intent.action.VIEW"/>
                <category
                    android:name="android.intent.category.DEFAULT"/>
                <category
                    android:name="android.intent.category.BROWSABLE"/>
                <data
                    android:host="market.android.com"
                    android:pathPrefix="/music"
                    android:scheme="http"/>
                <data
                    android:host="market.android.com"
                    android:pathPrefix="/music"
                    android:scheme="https"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.VideoUrlHandlerActivity">
            <intent-filter>
                <action
                    android:name="android.intent.action.VIEW"/>
                <category
                    android:name="android.intent.category.DEFAULT"/>
                <category
                    android:name="android.intent.category.BROWSABLE"/>
                <data
                    android:host="market.android.com"
                    android:pathPrefix="/movies"
                    android:scheme="http"/>
                <data
                    android:host="market.android.com"
                    android:pathPrefix="/movies"
                    android:scheme="https"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ContentFilterActivity"
            android:theme="@android:style/Theme.Holo.Light.Dialog"/>
        <service
            android:name=".services.InAppBillingProxyService">
            <intent-filter>
                <action
                    android:name="com.android.vending.billing.MarketBillingService.BIND"/>
            </intent-filter>
        </service>
        <provider
            android:authorities="com.google.android.finsky.SuggestionProvider"
            android:name=".providers.SuggestionProvider"/>
        <provider
            android:authorities="com.google.android.finsky.LocalSuggestionProvider"
            android:name=".providers.LocalSuggestionProvider"/>
        <provider
            android:authorities="com.google.android.finsky.RecentSuggestionProvider"
            android:name=".providers.RecentSuggestionProvider"/>
        <activity
            android:label="@string/purchase_activity_name"
            android:name=".activities.PurchaseActivity"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/Theme.CustomDialog"
            android:windowSoftInputMode="adjustResize"/>
        <meta-data
            android:name="android.app.default_searchable"
            android:value=".activities.QsbSearchActivity"/>
        <receiver
            android:name=".receivers.ClearCacheReceiver">
            <intent-filter>
                <action
                    android:name="android.intent.action.LOCALE_CHANGED"/>
                <action
                    android:name="android.intent.action.SIM_STATE_CHANGED"/>
            </intent-filter>
        </receiver>
        <receiver
            android:name=".widget.FinskyWidgetProvider">
            <intent-filter>
                <action
                    android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
                <action
                    android:name="com.google.android.finsky.action.DFE_API_CONTEXT_CHANGED"/>
                <action
                    android:name="android.accounts.LOGIN_ACCOUNTS_CHANGED"/>
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_info"/>
        </receiver>
        <service
            android:exported="false"
            android:name=".widget.FinskyWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS"/>
    </application>
    <uses-sdk
        android:maxSdkVersion="13"
        android:minSdkVersion="11"
        android:targetSdkVersion="11"/>
</manifest>
